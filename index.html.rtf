            `;\
        \}\
\
        function simulatePriceChange() \{\
            let data = currentPriceData[currentActivePriceType];\
            const oldPrice = data.currentPrice;\
            // Generate a small random fluctuation based on coffee type\
            let fluctuation = (Math.random() * 2 - 1) * (currentActivePriceType === 'arabica' ? 0.50 : 15.00); // Larger fluctuation for Robusta (per ton)\
            let newPrice = oldPrice + fluctuation;\
            \
            // Ensure price doesn't go too low for realism\
            if (currentActivePriceType === 'arabica' && newPrice < 250) newPrice = 250 + Math.random() * 10;\
            if (currentActivePriceType === 'robusta' && newPrice < 3000) newPrice = 3000 + Math.random() * 50;\
\
            newPrice = parseFloat(newPrice.toFixed(2));\
\
            data.change = newPrice - oldPrice;\
            data.currentPrice = newPrice;\
            data.lastUpdate = new Date().toLocaleString('es-ES');\
            updatePriceDisplayContent();\
        \}\
